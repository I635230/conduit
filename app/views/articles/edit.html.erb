<% provide(:title, "Edit Article") %>

<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-xs-12">
      
        <%= render 'shared/article_error_messages' %>

        <%= form_with(model: @article, url: article_path) do |f| %>
          <fieldset class="form-group">
            <%= f.text_field :title, :placeholder => "Article Title", class: "form-control form-control-lg" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_field :description, :placeholder => "What's this article about?", class: "form-control" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_area :content, :placeholder => "Write your article (in markdown)", rows: "8", class: "form-control" %>
          </fieldset>

          <%= f.submit "Renew Article", class: "btn btn-lg pull-xs-right btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>
</div>